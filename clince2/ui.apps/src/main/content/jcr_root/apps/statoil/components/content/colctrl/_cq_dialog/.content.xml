<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Columns">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Column Layout"
                        name="./layout_placeholder">
                        <datasource
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="foundation/components/parsys/colctrl/layoutdatasource"/>
                    </layout>
                    <sectiontitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Section Title"
                        name="./jcr:sectiontitle"/>
                    <backgroundcolor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Background color"
                        name="./backgroundcolor">
                        <items jcr:primaryType="nt:unstructured">
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="white"/>
                            <lightgrey
                                jcr:primaryType="nt:unstructured"
                                text="Light grey"
                                value="light-grey"/>
                            <lightblue
                                jcr:primaryType="nt:unstructured"
                                text="Light blue magazine"
                                value="light-blue-magazine"/>
                            <darkblue
                                jcr:primaryType="nt:unstructured"
                                text="Dark blue magazine"
                                value="dark-blue-magazine"/>
                            <magentapromo
                                jcr:primaryType="nt:unstructured"
                                text="Magenta promo"
                                value="magenta-promo"/>
                            <bluepromo
                                jcr:primaryType="nt:unstructured"
                                text="Blue promo"
                                value="blue-promo"/>
                            <midgreypromo
                                jcr:primaryType="nt:unstructured"
                                text="Mid grey promo"
                                value="mid-grey-promo"/>
                            <darkgreypromo
                                jcr:primaryType="nt:unstructured"
                                text="Dark grey promo"
                                value="dark-grey-promo"/>
                        </items>
                    </backgroundcolor>
                    <alignbuttons
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Align buttons"
                        name="./align-buttons">
                        <items jcr:primaryType="nt:unstructured">
                            <default
                                jcr:primaryType="nt:unstructured"
                                text="None"
                                value=""/>
                            <alignbuttons
                                jcr:primaryType="nt:unstructured"
                                text="Align bottom"
                                value="align-buttons"/>
                        </items>
                    </alignbuttons>
                    <spacing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                        fieldLabel="Spacing"
                        name="./spacing">
                        <items jcr:primaryType="nt:unstructured">
                            <none
                                jcr:primaryType="nt:unstructured"
                                text="None"
                                value=""/>
                            <top
                                jcr:primaryType="nt:unstructured"
                                text="Top"
                                value="top-spacing"/>
                            <bottom
                                jcr:primaryType="nt:unstructured"
                                text="Bottom"
                                value="bottom-spacing"/>
                            <both
                                jcr:primaryType="nt:unstructured"
                                text="Top and bottom"
                                value="top-spacing bottom-spacing"/>
                            <top-half
                                jcr:primaryType="nt:unstructured"
                                text="Top half"
                                value="top-half-spacing"/>
                            <bottom-half
                                jcr:primaryType="nt:unstructured"
                                text="Bottom half"
                                value="bottom-half-spacing"/>
                        </items>
                    </spacing>
                    <layout_hidden
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                        allowBlank="{Boolean}false"
                        fieldLabel="Layout"
                        name="./layout"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
