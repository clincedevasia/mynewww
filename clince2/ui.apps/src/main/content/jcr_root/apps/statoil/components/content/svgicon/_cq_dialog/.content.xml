<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Icon"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Carousel">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <content
                jcr:primaryType="nt:unstructured"
                jcr:title="Content"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <svgUrl
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Drop an SVG from the Content Finder"
                                fieldLabel="SVG File"
                                name="./svgUrl"
                                rootPath="/content/dam/statoil"/>
                            <inlineSvg
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldDescription="Paste Inline SVG"
                                fieldLabel="SVG Inline"
                                name="./inlineSvg"/>
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Link to"
                                name="./linkURL"
                                rootPath="/content"/>
                            <caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Caption"
                                name="./jcr:caption"/>
                            <copyright
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Reference"
                                name="./jcr:copyright"/>
                            <type
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Type / Size"
                                name="./svgType">
                                <items jcr:primaryType="nt:unstructured">
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="Large"
                                        value="large"/>
                                    <medium
                                        jcr:primaryType="nt:unstructured"
                                        text="Medium"
                                        value="medium"/>
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="Normal"
                                        value="normal"/>
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="small"/>
                                </items>
                            </type>
                            <responsive
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                name="./responsiveEnabled"
                                text="Enable responsive"
                                value="true"/>
                            <spacebelow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Space below"
                                name="./space">
                                <items jcr:primaryType="nt:unstructured">
                                    <def
                                        jcr:primaryType="nt:unstructured"
                                        text="(default)"
                                        value=""/>
                                    <none
                                        jcr:primaryType="nt:unstructured"
                                        text="None"
                                        value="space-below_none"/>
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="Normal"
                                        value="space-below_normal"/>
                                    <big
                                        jcr:primaryType="nt:unstructured"
                                        text="Big"
                                        value="space-below_big"/>
                                </items>
                            </spacebelow>
                        </items>
                    </column>
                </items>
            </content>
        </items>
    </content>
</jcr:root>
