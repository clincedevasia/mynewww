<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Image">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <image
                jcr:primaryType="nt:unstructured"
                jcr:title="Image"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linkURL
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Drop files or pages from the Content Finder"
                                fieldLabel="Link to"
                                name="./fileReference"
                                rootPath="/content/dam"/>
                            <caption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Caption"
                                name="./jcr:caption"/>
                            <shortcaption
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Second Caption"
                                name="./jcr:shortcaption"/>
                            <copyright
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Reference"
                                name="./jcr:copyright"/>
                            <information
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Information"
                                name="./jcr:information"/>
                            <type
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Type / Size"
                                name="./type">
                                <items jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        text="Full"
                                        value="image"/>
                                    <wrap
                                        jcr:primaryType="nt:unstructured"
                                        text="Wrap"
                                        value="icon"/>
                                    <circle
                                        jcr:primaryType="nt:unstructured"
                                        text="Circle"
                                        value="circle"/>
                                    <portrait
                                        jcr:primaryType="nt:unstructured"
                                        text="Portrait"
                                        value="portrait"/>
                                </items>
                            </type>
                            <lightbox
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                fieldLabel="Enable lightbox"
                                name="./lightbox"
                                text="Enable lightbox"
                                value="true"/>
                            <anchor
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Set this value to be able to link directly to this section"
                                fieldLabel="Anchor"
                                name="./anchor"/>
                            <spacebelow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Space below"
                                name="./space">
                                <items jcr:primaryType="nt:unstructured">
                                    <def
                                        jcr:primaryType="nt:unstructured"
                                        text="(default)"
                                        value=""/>
                                    <none
                                        jcr:primaryType="nt:unstructured"
                                        text="None"
                                        value="space-below_none"/>
                                    <normal
                                        jcr:primaryType="nt:unstructured"
                                        text="Normal"
                                        value="space-below_normal"/>
                                    <big
                                        jcr:primaryType="nt:unstructured"
                                        text="Big"
                                        value="space-below_big"/>
                                </items>
                            </spacebelow>
                        </items>
                    </column>
                </items>
            </image>
        </items>
    </content>
</jcr:root>
