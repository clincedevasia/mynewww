<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Factbox"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Button">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <fieldset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Factbox Attributes"
                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Title to be shown inside of factbox"
                                        fieldLabel="Title"
                                        name="./title"/>
                                    <highlight
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Highlight"
                                        name="./highlight">
                                        <items jcr:primaryType="nt:unstructured">
                                            <transparent
                                                jcr:primaryType="nt:unstructured"
                                                text="Transparent"
                                                value=""/>
                                            <default
                                                jcr:primaryType="nt:unstructured"
                                                text="Default"
                                                value="default"/>
                                            <highlighted
                                                jcr:primaryType="nt:unstructured"
                                                text="Highlighted"
                                                value="highlighted"/>
                                        </items>
                                    </highlight>
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Columns"
                                        name="./textcolumns">
                                        <items jcr:primaryType="nt:unstructured">
                                            <textcolumn1
                                                jcr:primaryType="nt:unstructured"
                                                text="1 column"
                                                value="textcolumns1"/>
                                            <textcolumn2
                                                jcr:primaryType="nt:unstructured"
                                                text="2 columns"
                                                value="textcolumns2"/>
                                        </items>
                                    </columns>
                                    <reduce
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./reduceWidth"
                                        text="Reduce width"
                                        value="true"/>
                                    <spacebelow
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Space below"
                                        name="./space">
                                        <items jcr:primaryType="nt:unstructured">
                                            <def
                                                jcr:primaryType="nt:unstructured"
                                                text="(default)"
                                                value=""/>
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value="space-below_none"/>
                                            <normal
                                                jcr:primaryType="nt:unstructured"
                                                text="Normal"
                                                value="space-below_normal"/>
                                            <big
                                                jcr:primaryType="nt:unstructured"
                                                text="Big"
                                                value="space-below_big"/>
                                        </items>
                                    </spacebelow>
                                </items>
                            </column>
                        </items>
                    </fieldset>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
